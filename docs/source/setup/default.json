{
"project_mount_point": "/tmp",
"template_search_path": "$ADE_CONFIG_PATH/../templates/",
"root_template": "@+show+@",
"defaults": {
    "show": "show_name",
    "user" : "$USER",
    "python_version": "2.6.4"
},
"regexp_mapping" :
    {
        "user": "(?P<user>[a-zA-Z0-9_]+)",
        "show": "(?P<show>[a-zA-Z0-9_]+)",
        "sequence": "(?P<sequence>[a-zA-Z0-9_]+)",
        "shot": "(?P<shot>[a-zA-Z0-9_]+)",
        "python_version": "(?P<python_version>[a-zA-Z0-9_]+)",
        "department": "(?P<department>[a-zA-Z0-9_]+)"
    }
}
